# Database (PostgreSQL)
# Формат: postgresql://user:password@host:port/database
DATABASE_URL="postgresql://localhost:5432/resto"

# JWT
JWT_SECRET=your-secret-key-change-in-production
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Server
PORT=3001
NODE_ENV=development

# 2FA
TWO_FACTOR_ISSUER=Resto Management

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Email (для уведомлений)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Telegram Bot (для уведомлений)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# Frontend URL
FRONTEND_URL=http://localhost:5173

# Admin User (для первого запуска)
ADMIN_EMAIL=admin@resto.local
ADMIN_PASSWORD=Admin123!

# VAPID Keys для Push-уведомлений (Web Push API)
# Для генерации ключей выполните: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_SUBJECT=mailto:admin@resto.local

